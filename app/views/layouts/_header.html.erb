<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Share the Ride", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <!-- This Home will take me to a page showing all user activities and uplodes/posts -->
              <li><%= link_to "Home", "#" %></li>  
              <li><%= link_to "About",   about_path %></li>
              <li><%= link_to "Contact",   contact_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                   <!--here will be the link to user profile page which will show all the activity by user -->
                  <li><%= link_to "Profile", current_user %></li> 
                  <!-- Here will be the link to a page from where user can update his/her information -->
                  <li><%= link_to "Settings", '#' %></li> 
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log out", logout_path, method: :delete %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Home",   root_path %></li>
              <li><%= link_to "About",   about_path %></li>
              <li><%= link_to "Contact",   contact_path %></li>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
           
          </ul>
         
        </nav>
      </div>
    </header>
    
    <div class="jumbotron container">
      <h1><%= yield(:header) %></h1>
    </div>