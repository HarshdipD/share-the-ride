<% provide(:title, 'Home') %>
<% provide(:header, 'Home') %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <br>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Recent Postings</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
    <div class="center">
    <p>Share the Ride is a simple and easy to use web app to help you find your next ride or carpool!</p>
    <!-- buttons to redirect to sign up and log in pages will be placed here -->
    <p><%= link_to 'Sign up', signup_path, class: 'btn btn-primary' %> or <%= link_to 'Log in', login_path, class: 'btn btn-primary' %></p>
    </div>
<% end %>