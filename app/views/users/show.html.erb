<% provide(:title, @user.Fname) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div class="center">
        <%= link_to gravatar_for(current_user, size: 70), current_user %>
        <h1><%= current_user.Fname %></h1>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>My Posts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>